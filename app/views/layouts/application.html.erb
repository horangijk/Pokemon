<!DOCTYPE html>
<html>
  <head>
    <title>PokemonAsh</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <% if @logged_in_user %>
        <%= @logged_in_user.username %>
      <% end %>
      <% if @errors %>
      <ul>
        <% @errors.each do |error| %>
        <li>
          <%= error %>
        </li>
        <% end %>
      </ul>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
